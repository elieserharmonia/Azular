
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner() {
      return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    function isOwnerRead(resourceData) {
      return isSignedIn() && resourceData.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /accounts/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isOwnerRead(resource.data);
    }

    match /categories/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isOwnerRead(resource.data);
    }

    match /transactions/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isOwnerRead(resource.data);
    }

    match /budgets/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isOwnerRead(resource.data);
    }

    match /goals/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isOwnerRead(resource.data);
    }

    match /goalContributions/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isOwnerRead(resource.data);
    }

    match /debts/{docId} {
      allow create: if isOwner();
      allow read, update, delete: if isOwnerRead(resource.data);
    }
  }
}
